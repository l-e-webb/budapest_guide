<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="PagerTabStripText" parent="TextStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AttractionTitleText" parent="TextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AttractionDescriptionText" parent="TextStyle">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
